@model ShopAcc.Models.Config

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ShopAdministrator/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SKIN</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.merchant_id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.merchant_id, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.merchant_id)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.api_user, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.api_user, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.api_user)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.api_password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.api_password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.api_password)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>
